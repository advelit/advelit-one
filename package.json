{
  "name": "advelit-one",
  "version": "0.0.20",
  "description": "Core Service Provider for Advelit One.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "type": "module",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "AdvelitOne.podspec"
  ],
  "author": "Advelit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/advelit/advelit-one.git"
  },
  "bugs": {
    "url": "https://github.com/advelit/advelit-one/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:android && npm run verify:web",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api AdvelitOnePlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "ship": "npm version patch && npm run build && npm publish",
    "postpublish": "git push"
  },
  "devDependencies": {
    "@capacitor/android": "^4.6.1",
    "@capacitor/core": "^4.6.1",
    "@capacitor/docgen": "^0.2.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^2.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^8.30.0",
    "prettier": "~2.8.1",
    "prettier-plugin-java": "~2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.5",
    "swiftlint": "^1.0.1",
    "typescript": "~4.9.4"
  },
  "peerDependencies": {
    "@capacitor/core": "^4.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "android": {
      "src": "android"
    }
  }
}
